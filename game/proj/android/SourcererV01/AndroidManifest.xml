<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="jp.co.altoterras.enlight">
	<application android:label="@string/enlight_activity">
		<activity android:name="EnlightActivity" android:theme="@android:style/Theme.NoTitleBar.Fullscreen" android:launchMode="singleTask" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<!-- Support for APK Expansion Files -->
		<service android:name=".EnlightDownloaderService" />
		<receiver android:name=".EnlightAlarmReceiver" />
	</application>
	<uses-feature android:glEsVersion="0x00010000"/>
	<uses-sdk android:minSdkVersion="5"/>

	<!-- Support for APK Expansion Files -->
	<uses-permission android:name="com.android.vending.CHECK_LICENSE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
